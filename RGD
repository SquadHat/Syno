-- Collect All Circuits

local Mouse = game:GetService("Players").LocalPlayer:GetMouse()
local Toggled = false
local Keybind = "c"

Mouse.KeyDown:Connect(function(Key)
    if Key == Keybind then
        if Toggled then
            Toggled = false
        else
            Toggled = true
            while Toggled and wait() do
     for _,v in pairs(game:GetService("Workspace").Circuit:GetDescendants()) do
if v:IsA("TouchTransmitter") then
firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, v.Parent, 0) --0 is touch
            end
        end
    end
end
end
end)

-- Collect All Big Circuit if found

local Mouse = game:GetService("Players").LocalPlayer:GetMouse()
local Toggled = false
local Keybind = "c"

Mouse.KeyDown:Connect(function(Key)
    if Key == Keybind then
        if Toggled then
            Toggled = false
        else
            Toggled = true
            while Toggled and wait() do
     for _,v in pairs(game:GetService("Workspace").BigCircuit:GetDescendants()) do
if v:IsA("TouchTransmitter") then
firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, v.Parent, 0) --0 is touch
            end
        end
    end
end
end
end)

-- Kill All Droids (Include All Droids)

local player = game.Players.LocalPlayer
local mouse = player:GetMouse()


keybind = string.lower("t")



mouse.KeyDown:connect(function(key)
if key == keybind then
setsimulationradius(math.huge,math.huge)

for i,v in pairs(game.Workspace:GetDescendants()) do
     if v:IsA("Humanoid") and v.Parent.Name ~= game.Players.LocalPlayer.Name then
         v.Health = 0
end
end
end
end)

-- Kill All Droids (Exclude Friendly Droid And Anti Droid)

plr = game.Players.LocalPlayer
mouse = plr:GetMouse()


mouse.KeyDown:connect(function(key)
if key == "r" then
 for i,v in pairs(game.Workspace.Room.Enemies:GetDescendants()) do
     if v:IsA("Humanoid") and v.Parent.Name ~= game.Players.LocalPlayer.Name then
         v.Health = 0
end
end
end
end)

-- Kill Aura

local Mouse = game:GetService("Players").LocalPlayer:GetMouse()
local Toggled = false
local Keybind = "g"

Mouse.KeyDown:Connect(function(Key)
    if Key == Keybind then
        if Toggled then
            Toggled = false
game.StarterGui:SetCore("SendNotification", {
Title = "KILLAURA";
Text = "KillAura | OFF";
Duration = 1;
})
        else
            Toggled = true
game.StarterGui:SetCore("SendNotification", {
Title = "KILLAURA";
Text = "KillAura | ON";
Duration = 1;
})
            while Toggled and wait() do
      for i, v in pairs(game:GetService("Workspace").Room.Enemies:GetDescendants()) do
         if v:FindFirstChild("Enemy") then
               v.Enemy.Health = 0
           end
       end
   end
end
end
end)

-- Walkspeed (not made by me this is the original thread https://v3rmillion.net/showthread.php?tid=1027601)

game:GetService('Players').LocalPlayer.Chatted:Connect(function(message)
   if string.find(message:lower(), '/e ws') then 
       game:GetService('Players').LocalPlayer.Character:FindFirstChild('Humanoid').WalkSpeed = message:gsub('/e ws', '')
   end
end)

-- Droids Walkspeed

while wait() do
for i,v in pairs(game.Workspace.Room.Enemies:GetDescendants()) do
if v:IsA("Humanoid") and v.Parent.Name ~= game.Players.LocalPlayer.Name then
v.WalkSpeed = 0
end
end
end
